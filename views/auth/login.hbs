<div class="auth">
    <div class="row">
        <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a href="#login">login</a></li>
            <li class="tab col s6"><a class="active" href="#register">registration</a></li>
        </ul>
        </div>
        <div id="login" class="col s6 offset-s3">

            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}
            <h1>Login</h1>
            <form action="/auth/login" method="post">
            <div class="input-field col s12">
                    <input placeholder="Enter email" id="email" name="email" type="email" required class="validate">
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="enter email"></span>
                </div>
            <div class="input-field col s12">
                <input placeholder="Enter password" id="password" name="password" type="password" required class="validate">
                <label for="password">Password</label>
                <span class="helper-text" data-error="enter password"></span>
                </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">

              {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
                  <h1>Create account</h1>
            <form action="/auth/register" method="post">
            <div class="input-field col s12">
                    <input placeholder="Enter email" id="remail" name="email" type="email" required class="validate">
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="enter email"></span>
                </div>
            <div class="input-field col s12">
                <input placeholder="Enter password" id="rpassword" name="password" type="password" required class="validate">
                <label for="rpassword">Password</label>
                <span class="helper-text" data-error="enter password"></span>
                </div>

             <div class="input-field col s12">
                <input placeholder="Enter password again" id="confirm" name="confirm" type="password" required class="validate">
                <label for="confirm">Password</label>
                <span class="helper-text" data-error="enter password"></span>
                </div>

                <div class="input-field col s12">
                <input placeholder="Enter your name" id="name" name="name" type="text" required class="validate">
                <label for="name">Name</label>
                <span class="helper-text" data-error="enter your name"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn btn-primary" type="submit">Registrate</button>
            </form>
        </div>
        </div>
    </div>
  </div>