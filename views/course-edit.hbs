<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" class="formEdit" method="post">
    <div class="input-field col s6">
            <input placeholder="Placeholder" id="title" name="title" type="text" required class="validate" value="{{course.title}}">
            <label for="title">Name of course</label>
            <span class="helper-text" data-error="enter name"></span>
        </div>
    <div class="input-field col s6">
          <input placeholder="Placeholder" id="price" name="price" type="number" required class="validate" value="{{course.price}}">
          <label for="price">Price of course</label>
          <span class="helper-text" data-error="enter price"></span>
        </div>
    <div class="input-field col s6">
          <input placeholder="Placeholder" id="img" name="img" type="text" required class="validate" value="{{course.img}}">
          <label for="img">Img url</label>
          <span class="helper-text" data-error="enter ulr of img" ></span>
        </div>
    <input type="hidden" name="id" id="id" value="{{course.id}}">
    <button type="submit" class="btn btn-primary">Edit course</button>
    <input type="hidden" name="_csrf" value="{{csrf}}">
</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course.id}}" >
    <button type="submit" class="btn red">Delete course</button>
    <input type="hidden" name="_csrf" value="{{csrf}}">
</form>